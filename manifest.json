{
    "manifest_version": 2,
    "name": "Clarity, A DIM Companion",
    "version": "1.4.4",
    "author": "Icemourne",
    "description": "Bringing the truth to light in their gear management. Extension aimed to improve Destiny item manager",
    "homepage_url": "https://github.com/Ice-mourne/DIM_Better_name_pending", 
    "icons": { "128": "images/icon.png" },
    "content_scripts": [
        {
            "matches": ["https://app.destinyitemmanager.com/*", "https://beta.destinyitemmanager.com/*"],
            "js": [
                "tools/element_creator.js",
                "tools/purify.min.js",
                "tools/random_tools.js",

                "weps_armor_mods_perks/weapon_perks.js",
                "weps_armor_mods_perks/extra_weapon_stats.js",
                "weps_armor_mods_perks/armor_descriptions.js",

                "weps_armor_mods_perks/new_extra_weapon_stats.js",
                "all_wep_perks.js",


                "content.js",
                "d2_gunsmith.js",
                "data_handler.js",
                "sources_&_more_menu.js",
                "weapon_related_info.js"
            ],
            "css": [
                "css/d2_gunsmith.css",
                "css/sources_and_more_menu.css",
                "css/style.css",
                "css/weapon_perks.css"
            ]
        }
    ],
    "web_accessible_resources": ["/images/*"],
    "permissions": [
        "https://ice-mourne.github.io/Clarity-A-DIM-Companion-json/*",
        "https://www.bungie.net/*",
        "webRequest"
    ]
}