{
    "manifest_version": 2,
    "name": "Clarity, A DIM Companion",
    "version": "1.6.3",
    "author": "Icemourne",
    "description": "This extension expands upon the capabilities of Destiny Item Manager (DIM) by providing new features. This tool will show you exactly what your perks and exotics do along with numerous other things to help you become the roll expert you want to be.",
    "homepage_url": "https://github.com/Ice-mourne/DIM_Better_name_pending",
    "icons": { "128": "images/icon.png" },
    "content_scripts": [
        {
            "matches": ["https://app.destinyitemmanager.com/*", "https://beta.destinyitemmanager.com/*"],
            "js": [
                "vue/vue.js",

                "tools/storage.js",
                "tools/random.js",
                "tools/random_data.js",

                "main_data_handling/find_classNames.js",
                "main_data_handling/flow_handler.js",
                "main_data_handling/auth.js",

                "main_data_handling/work_space.js",

                "main_data_handling/handle_data.js",


                "clarity_menu.js",
                "stuff.js",

                "adding_data/armor/description.js",

                "adding_data/weapon/calculators.js",
                "adding_data/weapon/stats.js",
                "adding_data/weapon/templates.js",
                "adding_data/weapon/weapon_popup.js"
            ],
            "css": [
                "styles/css/armor.min.css",
                "styles/css/auth.min.css",
                "styles/css/clarity_menu.min.css",
                "styles/css/descriptions.min.css",
                "styles/css/item_popup.min.css",
                "styles/css/weapons.min.css"
            ]
        }
    ],
    "web_accessible_resources": ["/images/*"],
    "permissions": [
        "https://ice-mourne.github.io/Database-for-Clarity/Database/*",
        "https://www.bungie.net/*"
    ]
}